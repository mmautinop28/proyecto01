<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOGS" value="d:/tmp/elk/" />
    
	<property scope="context" name="logger.type" value="ms-elk-demo-1" />
    
    <appender name="Console"
        class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
             <!--  %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n  %X{correlationId} -->
             ${logger.type} %d %p %C{1} %M:%L [%t] %m%n
            </Pattern>
        </layout>
    </appender>

    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/spring-boot-elk-demo-1.log</file>
        <encoder
            class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
            	<!-- %d %p %C{1.} [%t] %m%n -->
            	${logger.type} %d %p %C{1} %M:%L [%t] %m%n
            </Pattern>
        </encoder>

        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}archivo/spring-boot-elk-demo-1%d{yyyy-MM}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        
    </appender>
    
    <!-- LOG everything at INFO level -->
    <root level="info">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </root>

    <!-- LOG "pe.edu.galaxy.training.java.spring.boot.ekldemo*" at INFO level -->
    <logger name="pe.edu.galaxy.training.java.spring.boot.ekldemo" level="info" additivity="false">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </logger>

</configuration>